{{>navbar}}
<div class="ps-2">
    <p>Bienvenido : {{user.first_name}} </p>   
    <p>email : {{user.email}} </p>
    <p>Rol: {{user.role}} </p>
    <p>cart : {{user.cart}} </p>
</div>




<div class="d-flex flex-wrap">
   
    <div class='col-md-3 mx-2 my-3 r' >                                 
                <div class="card w-100 mt-5" >
                        <div class="card-header text-white bg-dark">
                            {{title}} 
                        </div> 
                        <div class="card-body">
                            <img src= {{tumbnail}}  style=' width:280px;height:200px;' class="card-img" >  
                            
                            <br />
                            id:    {{id}}  
                            
                            <br />
                            Description:  $  {{description}}

                            <br />
                            Price:  $  {{price}}  
                            
                           <br />
                            Stock : {{stock}}  
                        </div>       



                            
                                                                                 
                </div>
                <form action= "/api/cart/{{user.cart}}/product/{{id}}" method="post">

                <div class="form-outline form-white mb-4">
                    <label class="form-label" for="typeEmailX">Ingrese cantidad</label>
                    <input name =quantity type="text" id="typeEmailX" class="form-control form-control-lg" />
                    
                </div>

            


                <button class="btn btn-primary ps-3" type="submit">Agregar al carrito</button>
            </form>
            <button onclick="window.location.href='/api/product' " class="btn btn-success ps-3">Volver</button>
    
    </div>
    


</div>
