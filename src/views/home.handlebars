
{{>navbar}}
<div class="ps-2">
    <p>Bienvenido : {{user.first_name}} </p>   
    <p>email : {{user.email}} </p>
    <p>Rol: {{user.role}} </p>
    <p>cart : {{user.cart}} </p>
</div>



<form action= "../session/logout" method="get">
        <input  class="btn btn-danger ps-3 " type="submit" value="Logout">
</form>


<div class="d-flex flex-wrap">
    {{#each products}}
    <div class='col-md-3 mx-2 my-3 r' >                                 
                <div class="card w-100 mt-5" >
                        <div class="card-header text-white bg-dark">
                            {{title}} 
                        </div> 
                        <div class="card-body">
                            <img src= {{tumbnail}}  style=' width:280px;height:200px;' class="card-img" >  
                            <br />
                            Price:  $  {{price}}   
                            <br />
                            Stock : {{stock}}  
                        </div>                                                                                   
                </div>
       <button onclick="window.location.href='/api/product/{{_id}}' " class="btn btn-primary ps-3">Ver producto</button>
    </div>

    {{/each}}

</div>