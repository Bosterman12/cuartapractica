<h1 class="ps-2">Tienda de quesos y fiambres</h1>
<div class="ps-2">
    <h2>Bienvenido : {{user.first_name}} </h2>   
    <p>email : {{user.email}} </p>
    <p>Rol: {{user.role}} </p>
    <p>cart : {{user.cart}} </p>
</div>



<form action= "../session/login" method="get">
        <input  class="btn btn-light ps-3 " type="submit" value="Logout">
</form>


<div class="d-flex flex-wrap">
    {{#each products}}
    <div class='col-md-3 mx-2 my-3 r' >                                 
                <div class="card w-100 mt-5" >
                        <div class="card-header text-white bg-dark">
                            {{title}} 
                        </div> 
                        <div class="card-body">
                            <img src= {{tumbnail}}  style=' width:280px;height:200px;' >  
                            <br />
                            Price:  $  {{price}}   
                            <br />
                            Stock : {{stock}}  
                        </div>                                                                                   
                </div>
    </div>
    {{/each}}

</div>